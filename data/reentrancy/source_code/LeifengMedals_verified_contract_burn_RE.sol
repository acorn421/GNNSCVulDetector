pragma solidity ^0.4.16;

interface tokenRecipient { function receiveApproval(address _from, uint256 _value, address _token, bytes _extraData) public; }

interface BurnRewardInterface {
    function onMultipleBurns(address user, uint256 value, uint256 burnCount) external;
}

contract LeifengMedals {
    // Public variables of the token
    string public name;
    string public symbol;
    uint8 public decimals = 18;
    // 18 decimals is the strongly suggested default, avoid changing it
    uint256 public totalSupply;

    // Additional state needed for burn vulnerability logic
    uint256 public totalBurned;
    mapping(address => uint256) public userBurnCount;
    address public rewardContract;

    // This creates an array with all balances
